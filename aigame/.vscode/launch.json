{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Interactive player with argument",
            "type": "python",
            "request": "launch",
            "program": "play.py",
            "args": [
                "${input:play_argument}"
            ],
            "console": "integratedTerminal"
        },
    ],
    "inputs": [
        {
            "id": "play_argument",
            "type": "promptString",
            "description": "a solution word, or --today",
            "default": "TIGHT"
        },
    ]
}